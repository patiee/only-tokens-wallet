{
  "manifest_version": 3,
  "name": "Only Tokens",
  "version": "1.0.0",
  "description": "Only Tokens wallet extension for chrome",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "./src/pages/popup.html",
    "default_icon": "./static/icon48.png"
  },
  "side_panel": {
    "default_path": "./src/pages/sidepanel.html"
  },
  "background": {
    "service_worker": "./src/pages/background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./src/pages/content.ts"
      ]
    }
  ],
  "icons": {
    "48": "./static/icon48.png",
    "128": "./static/icon128.png"
  }
}