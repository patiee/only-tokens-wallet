{
  "manifest_version": 3,
  "name": "Only Tokens",
  "description": "Only Tokens wallet extension",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/vendor.js",
        "js/ex_script.js",
        "js/create_password.js",
        "js/create_mnemonic.js",
        "js/dashboard.js",
        "js/chains.js",
        "js/cosmos.js",
        "js/dogecoin.js",
        "js/evm.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/*.js", "/*.js", "chains.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
